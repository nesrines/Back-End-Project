@model Category
@{ ViewData["Title"] = "Create Category"; }

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">New Category</h1>
</div>

<div class="row justify-content-8">
    <form method="post" class="col-8">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <a asp-area="Manage" asp-controller="Category" asp-action="Index" class="d-inline-block me-1 btn btn-primary">Go Back</a>
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
</div>