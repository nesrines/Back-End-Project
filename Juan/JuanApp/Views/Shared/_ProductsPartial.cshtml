@model IEnumerable<Product>

@foreach (Product product in Model)
{
    <div class="col-lg-4 col-sm-6">
        <!-- product grid item start -->
        <div class="product-item mb-53">
            <div class="product-thumb">
                <a asp-controller="Product" asp-action="Details" asp-route-id="">
                    <img src="~/assets/img/product/product-1.jpg" alt="">
                </a>
            </div>
            <div class="product-content">
                <h5 class="product-name">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="">Leather Mens Slipper</a>
                </h5>
                <div class="price-box">
                    @if (product.Discount > 0)
                    {
                        <span class="price-regular">$@((product.Price - product.Price * product.Discount / 100).ToString("#.##"))</span>
                        <span class="price-old"><del>$@product.Price.ToString("#.##")</del></span>
                    }
                    else { <span class="price-regular">$@product.Price.ToString("#.##")</span> }
                </div>
                <div class="product-action-link">
                    <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                    <a asp-controller="Basket" asp-action="AddBasket" asp-route-id="@product.Id" class="basket-btn" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag"></i></a>
                    <a asp-controller="Product" asp-action="Modal" asp-route-id="@product.Id" class="modal-btn" data-toggle="modal" data-target="#quick_view">
                        <span data-toggle="tooltip" title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                    </a>
                </div>
            </div>
        </div>
        <!-- product grid item end -->

        <!-- product list item start -->
        <div class="product-list-item mb-30">
            <div class="product-thumb">
                <a asp-controller="Product" asp-action="Details" asp-route-id="product.Id">
                    <img src="~/assets/img/product/@product.MainImage" alt="product thumb">
                </a>
            </div>
            <div class="product-content-list">
                <h5 class="product-name">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">@product.Title</a>
                </h5>
                <div class="price-box">
                    @if (product.Discount > 0)
                    {
                        <span class="price-regular">$@((product.Price - product.Price * product.Discount / 100).ToString("#.##"))</span>
                        <span class="price-old"><del>$@product.Price.ToString("#.##")</del></span>
                    }
                    else { <span class="price-regular">$@product.Price.ToString("#.##")</span> }
                </div>
                <p>@product.SmallDesc</p>
                <div class="product-link-2 position-static">
                    <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                    <a asp-controller="Basket" asp-action="AddBasket" asp-route-id="@product.Id" class="basket-btn" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag"></i></a>
                    <a asp-controller="Product" asp-action="Modal" asp-route-id="@product.Id" class="modal-btn" data-toggle="modal" data-target="#quick_view">
                        <span data-toggle="tooltip" title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                    </a>
                </div>
            </div>
        </div>
        <!-- product list item start -->
    </div>
}